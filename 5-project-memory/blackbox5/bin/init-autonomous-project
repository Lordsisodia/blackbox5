#!/bin/bash
#
# init-autonomous-project
# Initialize the .autonomous/ structure for a new project
#

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BLACKBOX5_DIR="$(dirname "$SCRIPT_DIR")"
TEMPLATES_DIR="$BLACKBOX5_DIR/5-project-memory/_template/blackbox/_template/autonomous"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Help
if [ "$1" == "--help" ] || [ "$1" == "-h" ]; then
    echo "Usage: init-autonomous-project [PROJECT_PATH]"
    echo ""
    echo "Initialize the .autonomous/ structure for a project."
    echo "If PROJECT_PATH is not provided, uses current directory."
    echo ""
    echo "Options:"
    echo "  -h, --help     Show this help message"
    echo ""
    echo "Example:"
    echo "  init-autonomous-project ~/projects/my-app"
    exit 0
fi

# Determine target directory
if [ -n "$1" ]; then
    TARGET_DIR="$1"
    if [ ! -d "$TARGET_DIR" ]; then
        echo -e "${RED}Error: Directory does not exist: $TARGET_DIR${NC}"
        exit 1
    fi
else
    TARGET_DIR="$(pwd)"
fi

AUTONOMOUS_DIR="$TARGET_DIR/.autonomous"

if [ -d "$AUTONOMOUS_DIR" ]; then
    echo -e "${YELLOW}Warning: .autonomous/ already exists at $TARGET_DIR${NC}"
    read -p "Overwrite? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo "Aborted."
        exit 0
    fi
    rm -rf "$AUTONOMOUS_DIR"
fi

echo "Initializing .autonomous/ structure at $TARGET_DIR..."

# Create directory structure
mkdir -p "$AUTONOMOUS_DIR"/{communications,tasks/{active,completed},runs,goals/{completed,templates},memory/insights,feedback/incoming,validations,workspaces,timeline}

# Copy template files (removing .template extension)
cp "$TEMPLATES_DIR/routes.yaml.template" "$AUTONOMOUS_DIR/routes.yaml"
cp "$TEMPLATES_DIR/decision_registry.md.template" "$AUTONOMOUS_DIR/decision_registry.md"
cp "$TEMPLATES_DIR/communications/protocol.yaml.template" "$AUTONOMOUS_DIR/communications/protocol.yaml"
cp "$TEMPLATES_DIR/communications/queue.yaml.template" "$AUTONOMOUS_DIR/communications/queue.yaml"
cp "$TEMPLATES_DIR/communications/events.yaml.template" "$AUTONOMOUS_DIR/communications/events.yaml"
cp "$TEMPLATES_DIR/communications/heartbeat.yaml.template" "$AUTONOMOUS_DIR/communications/heartbeat.yaml"
cp "$TEMPLATES_DIR/communications/chat-log.yaml.template" "$AUTONOMOUS_DIR/communications/chat-log.yaml"

# Create goals.yaml
cat > "$AUTONOMOUS_DIR/goals.yaml" << 'EOF'
goals: []

# Example:
# - id: GOAL-001
#   title: Implement feature X
#   status: active|completed|blocked
#   priority: critical|high|medium|low
#   created_at: '2026-01-31T00:00:00Z'
#   completed_at: null
#   tasks:
#     - TASK-001
#     - TASK-002
EOF

# Create STATE.yaml
cat > "$AUTONOMOUS_DIR/STATE.yaml" << 'EOF'
project:
  name: null  # Fill in your project name
  version: "0.1.0"
  status: initialization

last_updated: null

active_epic: null
active_tasks: []

metrics:
  total_runs: 0
  total_tasks: 0
  completed_tasks: 0
  success_rate: 0

next_actions: []
EOF

echo -e "${GREEN}âœ“ .autonomous/ structure created${NC}"
echo ""
echo "Next steps:"
echo "  1. Edit .autonomous/routes.yaml with your project details"
echo "  2. Edit .autonomous/STATE.yaml with project name"
echo "  3. Run 'ralf-planner' to start the Dual-RALF system"
echo ""
echo "Structure created:"
find "$AUTONOMOUS_DIR" -type f | head -20 | sed 's|^|  |'
